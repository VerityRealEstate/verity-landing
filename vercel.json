{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "env": {
    "REACT_APP_API_URL": "@REACT_APP_API_URL",
    "REACT_APP_STRIPE_PUBLIC_KEY": "@REACT_APP_STRIPE_PUBLIC_KEY"
  },
  "envDescription": "Environment variables for VERITY production",
  "regions": ["iad1"],
  "functions": {
    "api/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://verity-backend-production.up.railway.app/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, s-maxage=60"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/docs",
      "destination": "https://verity-backend-production.up.railway.app/docs",
      "permanent": false
    }
  ]
}
